<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    >

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_label"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/font_label"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight=".7"/>

  <android.support.v7.widget.AppCompatSpinner
      android:id="@+id/font_spinner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:drawable/btn_dropdown"
      android:spinnerMode="dropdown"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="8dp"
      android:layout_weight=".3"/>
</android.support.v7.widget.LinearLayoutCompat>

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/volume_label"
        android:gravity="center"/>

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/volume_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/background_label"
        android:gravity="center"/>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/settings_bg_button1"
            android:src="@drawable/default_bg"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageButton
            android:id="@+id/settings_bg_button2"
            android:src="@drawable/paper1"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageButton
            android:id="@+id/settings_bg_button3"
            android:src="@drawable/paper2"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageButton
            android:id="@+id/settings_bg_button4"
            android:src="@drawable/paper3"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <CheckBox
        android:id="@+id/notification_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notifications_label"/>

    <CheckBox
        android:id="@+id/sharing_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sharing_label"/>

</LinearLayout>