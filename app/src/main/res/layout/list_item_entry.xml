<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/list_item_entry_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        android:textSize="14sp"
        tools:text="Journal Entry Title"/>
    <TextView
        android:id="@+id/list_item_entry_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_entry_title_text_view"
        android:padding="4dp"
        android:textSize="12sp"
        tools:text="Journal Entry Date"/>

</RelativeLayout>